<!DOCTYPE html>
<html>
<head>
  <title>UrlShortener</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">
    <div class="pull-right">
      <%= link_to root_url, class: "btn btn-primary btn-md", style: "color:white;" do %>
        <span class="glyphicon glyphicon-home"></span> Home
      <% end %>
      <%= link_to api_page_path, class: "btn btn-primary btn-md", style: "color:white;" do %>
        <span class="glyphicon glyphicon-home"></span> API Guide
      <% end %>
    </div>
    <%= yield %>
  </div>

</body>
</html>
